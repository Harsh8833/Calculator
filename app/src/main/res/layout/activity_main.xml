<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/light_red"
    android:orientation="vertical">


    <!-- Text Field -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </com.google.android.material.card.MaterialCardView>

    <!-- mini buttons row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight=".25"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="center"
            android:text="( )"
            android:textSize="24dp"
            android:textColor="@color/pie_color"
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="center"

            android:text="π"
            android:textSize="24dp"
            android:textColor="@color/pie_color"
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="center"
            android:text="e"
            android:textSize="24dp"
            android:textColor="@color/pie_color"
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="center"
            android:text="!"
            android:textSize="24dp"
            android:textColor="@color/pie_color"
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/log_key"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight=".1"
            android:layout_margin="4dp"
            app:backgroundTint="@color/up_down"
            android:layout_gravity="center|top"
            app:elevation="0dp">
        </com.google.android.material.floatingactionbutton.FloatingActionButton>


        <!-- First Row -->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight=".5"
        android:backgroundTint="@color/dark_pink">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            app:backgroundTint="@color/gray_purple"
            style="@style/number_keys"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:text=" AC">

        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_margin="4dp"
            style="@style/symbols_keys"
            android:text=" %">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_margin="4dp"
            style="@style/symbols_keys"
            android:text=" ÷">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/backspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            style="@style/symbols_keys"
            android:text="⌫"
            android:textSize="40dp">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

    </LinearLayout>

    <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".5"
            android:backgroundTint="@color/dark_pink">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/key1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                app:backgroundTint="@color/light_pink"
                app:elevation="0dp"
                android:text="@string/_1"
                android:letterSpacing="0.25"
                android:textSize="36sp"
                android:fontFamily="sans-serif-condensed-light">
            </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/key2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:layout_margin="4dp"
                style="@style/number_keys"
                android:text="@string/_2">
            </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/key3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:layout_margin="4dp"
                style="@style/number_keys"
                android:text="@string/_3">
            </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                style="@style/symbols_keys"
                android:text=" X"
                >
            </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        </LinearLayout>

    <!-- Third Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight=".5"
        android:backgroundTint="@color/dark_pink">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/key4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            style="@style/number_keys"
            android:text="@string/_4">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/key5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_margin="4dp"
            style="@style/number_keys"
            android:text="@string/_5">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/key6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_margin="4dp"
            style="@style/number_keys"
            android:text="@string/_6">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:text=" -"
            style="@style/symbols_keys">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

    </LinearLayout>

    <!-- Fourth Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight=".5"
        android:backgroundTint="@color/dark_pink">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/key7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            style="@style/number_keys"
            android:text="@string/_7">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/key8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_margin="4dp"
            style="@style/number_keys"
            android:text="@string/_8">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/key9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_margin="4dp"
            style="@style/number_keys"
            android:text="9">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            style="@style/symbols_keys"
            android:text=" +">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

    </LinearLayout>


    <!-- Last Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight=".5"
        android:backgroundTint="@color/dark_pink">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/key0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            style="@style/number_keys"
            android:text="@string/_0">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/key_decimal"
            style="@style/number_keys"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight=".5"
            android:text="."
            android:textColor="#FF1744"
            tools:ignore="TextContrastCheck"></com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="86dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            app:backgroundTint="@color/equal_button"
            app:elevation="0dp"
            android:shadowColor="@color/light_red"
            android:text="="
            android:gravity="center"
            android:textSize="42dp"
            android:fontFamily="sans-serif-condensed-light">


        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

    </LinearLayout>







</androidx.appcompat.widget.LinearLayoutCompat>