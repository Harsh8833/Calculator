<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/light_red</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="number_keys">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/light_pink</item>
        <item name="android:textSize">@dimen/key</item>
        <item name="android:textColor">@color/pie_color</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="symbols_keys">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/dark_pink</item>
        <item name="android:textSize">@dimen/symbols</item>
        <item name="android:textColor">@color/pie_color</item>
        <item name="android:elevation">0dp</item>
    </style>

</resources>